<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/parent_layout_favorites"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_farm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/farm_name"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/image_farm"
        android:paddingTop="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/farm_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/farm_phone"
        android:layout_centerVertical="false"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@id/image_farm"
        android:paddingTop="19dp"
        android:textSize="12sp" />


    <!-- bouton like -->
    <ImageView
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="241dp"
        android:layout_toRightOf="@id/farm_phone"
        android:src="@drawable/ic_favorite_border_black_24dp"

        android:tint="@android:color/black" />


</RelativeLayout>
